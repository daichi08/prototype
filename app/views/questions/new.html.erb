<%= form_for @question , url: questions_new_path do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.label :have_point %>
  <%= f.collection_select :have_point ,@points, :point ,:point %>
  <%= f.label :period %> 
  <%= f.date_select :period %>
  <%= f.submit %>
<% end %>