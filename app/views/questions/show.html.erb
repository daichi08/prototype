<h1><%= @question.title %></h1>
<%= @question.content %><br>
回答で<%= @question.have_point %>ポイントゲット！
<%= @question.period %>まで！

<% if @question.style_id == 1 %>
  <%= form_for @answer , url: questions_show_path do |f| %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.submit %>
  <% end %>
<% else %>
  <% @selects.each do |f| %>
    <%= button_to "#{f.choices}" %>
  <% end %>
<% end %>
