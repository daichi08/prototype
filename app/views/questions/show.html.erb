<h1><%= @question.title %></h1>
<%= @question.content %><br>
回答で<%= @question.have_point %>ポイントゲット！
<%= @question.period %>まで！


<%= form_for @answer, url: questions_show_path do |f| %>
  <% if @question.style_id == 1 %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :question_id, value: @question.id %>
    <%= f.submit %>
  <% else %>
    <%= f.label :content %>
    <%= f.collection_select :content, @question.selects, :id, :choices %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :question_id, value: @question.id %>
    <%= f.submit %>
  <% end %>
<% end %>